# Autonotify when a long command has been completed
export AUTO_NOTIFY_THRESHOLD=300
export AUTO_NOTIFY_TITLE="Boss! the command: %command has just finished"
export AUTO_NOTIFY_BODY="Time taken: %elapsed minutes exit code: %exit_code, have a look"
export AUTO_NOTIFY_IGNORE=("docker" "man","nano","vim","ssh","less","e","openvpn","ping","nc","penelope")
export AUTO_NOTIFY_EXPIRE_TIME=10

export JAVA_HOME="/usr/lib/jvm/java-11-openjdk/"
export GEM_HOME=~/.ruby/
export WORKON_HOME=~/.virtualenvs
source ~/.local/bin/virtualenvwrapper.sh
export ZSH=~/.zsh

export PATH=$PATH:~/.cargo/bin/
export PATH=$PATH:~/dart-sass/
export PATH=$PATH:~/.local/bin/
export PATH=$PATH:~/bin/
export PATH=$PATH:~/.ruby/bin/
export PATH="$PATH:$HOME/.rvm/bin"
export PATH="$PATH:$GOPATH/bin"

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Uncomment the following line to enable command auto-correction.
ENABLE_CORRECTION="true"

eval $(thefuck --alias)
eval "$(zoxide init zsh --no-aliases)"

cd () {
	__zoxide_z "$@"
	git rev-parse 2> /dev/null
	if [ $? -eq 0 ]
	then
		if [ "$LAST_REPO" != $(basename $(git rev-parse --show-toplevel)) ]
		then
			onefetch
			LAST_REPO=$(basename $(git rev-parse --show-toplevel)) 
		fi
	fi
}

source ~/.zsh/antigen.zsh

# antigen PLUGIN MANAGER
antigen use oh-my-zsh

# Powerlevel10k theme
antigen theme romkatv/powerlevel10k

# Autocompletion
setopt SHARE_HISTORY
HISTFILE=~/.zsh/zsh_history.zsh
SAVEHIST=1000000000
HISTSIZE=99999
setopt HIST_EXPIRE_DUPS_FIRST
source ~/.zsh/zsh-autocomplete/zsh-autocomplete.plugin.zsh
# autoload -U compinit && compinit

# APPLY antigen
antigen apply

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

unsetopt nomatch

# Generated for envman. Do not edit.
[ -s "$HOME/.config/envman/load.sh" ] && source "$HOME/.config/envman/load.sh"

# load aliases
source ~/.zsh/aliases.zsh

randomNum=$((1 + $RANDOM % 3))
if [ $randomNum -eq 1 ]; then
  figlet -f Bloody Evangelospro|lolcat
elif [ $randomNum -eq 2 ]; then
  colorscript random
elif [ $randomNum -eq 3 ]; then
  neofetch
fi